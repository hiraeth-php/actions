{
    "name": "hiraeth/actions",
    "description": "Robust actions for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role": "Lead Architect / Developer"
        }
    ],
    "require": {
        "hiraeth/app": "^3.0",
        "hiraeth/routing": "^3.0",
        "hiraeth/templates": "^3.0",
        "hiraeth/session": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "hiraeth/fastroute": "^3.0",
        "hiraeth/diactoros": "^3.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
